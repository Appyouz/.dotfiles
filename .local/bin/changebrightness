#!/bin/sh

function send_notification() {
	brightness=$(printf "%.0f\n" $(xbacklight -d))
	dunstify -a "changevolume" -u low -r "9993" -h int:value:"$brightness" -i "brightness-$1" "Br: $brightness%" -t 2000
}

case $1 in
up)
  xbacklight +5
	send_notification $1
	;;
down)
  xbacklight -5
	send_notification $1
  
	;;
esac

