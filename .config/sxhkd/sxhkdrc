
# -------------------------------
# sxhkd Configuration
# Location: ~/.config/sxhkd/sxhkdrc
# For Bajeal USB Keyboard (no Fn keys)
# -------------------------------

# --- SYSTEM / WM ---

# Reload sxhkd
super + Escape
    pkill -USR1 -x sxhkd

# Kill dwm
super + shift + Escape
    pkill dwm

# Lock screen
super + x
    betterlockscreen -l

# --- APPLICATION LAUNCHER ---
super + space
    rofi -show drun

# --- SCREENSHOTS ---
@Print
    screenshot

shift + @Print
    screenshot select

control + @Print
    screenshot window

# Super + F10 = mute, Super + F11 = up, Super + F12 = down
super + F10
    ~/.local/bin/changevolume down 

super + F11
    ~/.local/bin/changevolume up

super + F12
    ~/.local/bin/changevolume mute

# --- ALTERNATE CONTROLS (NUMPAD FALLBACK) ---
super + KP_Add
    ~/.local/bin/changevolume up

super + KP_Subtract
    ~/.local/bin/changevolume down

super + KP_Multiply
    ~/.local/bin/changevolume mute

super + F5
    ~/.local/bin/brightness down

super + F6
    ~/.local/bin/brightness up

# --- WIFI TOGGLE ---
super + w
      ~/.local/bin/wifitoggle.sh

